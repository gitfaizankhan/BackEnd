<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">

    </head>

    <body>
        <%- include('includes/navigation.ejs') %>
            <main id="form">
                <h1 style="text-align: center; font-weight: bold;">Contact Us</h1>
                <form class="product-form" action="../routes/contact" method="POST">
                    <div class="form-control">
                        <label for="title">First Name</label>
                        <input type="text" name="fname" id="fname" placeholder="First Name" required>
                    </div>
                    <div class="form-control">
                        <label for="title">Last Name</label>
                        <input type="text" name="lname" id="lname" placeholder="Last Name" required>
                    </div>
                    <div class="form-control">
                        <label for="title">Ph No.</label>
                        <input type="number" name="phone" id="phone" placeholder="Mobile Number" required>
                    </div>
                    <div class="form-control">
                        <label for="title">Email ID</label>
                        <input type="email" name="email" id="email" placeholder="Emial ID" required>
                    </div>
                    <button class="btn" type="submit">Submit</button>
                </form>
            </main>
        <%- include('includes/end.ejs') %>